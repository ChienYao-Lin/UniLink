<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="175.0" minWidth="420.0" prefHeight="175.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rmit.s3790516.unilink.LoginViewController">
   <top>
      <VBox alignment="CENTER" prefHeight="58.0" prefWidth="420.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Welcome to UniLink">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="infoLabel" text="Label" textFill="#e40303" />
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="66.0" prefWidth="420.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonHandler" text="Login">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quitButtonHandler" text="Quit">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="User Name">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="userNameTextField" prefHeight="25.0" prefWidth="284.0" promptText="Enter your user name" />
         </children>
      </HBox>
   </center>
</BorderPane>
